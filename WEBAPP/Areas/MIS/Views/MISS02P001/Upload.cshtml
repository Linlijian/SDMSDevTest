@using FluentBootstrap
@using WEBAPP.Helper
@using DataAccess.MIS
@using UtilityLib

@model MISS02P001Model

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


@using (var form = Html.Bootstrap().Form().SetId("form1").SetHorizontal().Begin())
{
    @form.ValidationSummary(true).AddCss(Css.Hidden)
    @Html.AntiForgeryToken()
    using (var rowInfo = Html.Bootstrap().GridRow().Begin())
    {
        using (rowInfo.GridColumn(12).SetXs(12).Begin())
        {
            @Html.GetVSMWidgetsBegin(Translation.CenterLang.Center.UPLOAD_INSTRUCTION)
            using (var row1 = Html.Bootstrap().GridRow().Begin())
            {
                using (row1.GridColumn(8).SetMdOffset(1).Begin())
                {
                    @form.InputFor(m => m.YEAR, isRequired: true).SetHelp("Format : YYYY Example: (2014)").SetMaxLength(6).SetSelectOnly()
                }
            }
            using (var row1 = Html.Bootstrap().GridRow().Begin())
            {
                <div class="space-10"></div>
                using (row1.GridColumn(12).Begin())
                {
                    @Html.GetVSMFileUploadExcelFor(m => m.EXCEL_UPLOAD, true, 2, false)
                }
            }
            @Html.GetVSMWidgetsEnd()
        }
    }
}
@using (var row = Html.Bootstrap().GridRow().SetId("rowGridSearch").SetVisibility(Visibility.Hidden).Begin())
{
    using (row.GridColumn(12).Begin())
    {
        @Html.Bootstrap().Table().SetId("GridSearch").SetStyle(TableStyle.TableStripedBorderedHover)
    }
}

@section scripts{
    @Html.GridScript("Search",
        new GridConfig
        {
            GetConfig = new DefaultConfig(Url.Action("SearchInfo")),
            DefaultBinding = true,
            ScrollX = false,
        },
            new GridColumn("YEAR").SetNotVisible().SetKey(),
            new GridColumn("YEAR", Translation.MIS.MISS02P001.YEAR, 10,ColumnsTextAlign.Center),
            new GridColumn("DEPLOYMENT_DATE", Translation.MIS.MISS02P001.DATE_INFO, 10, ColumnsType.Date, ColumnsTextAlign.Center),
            new GridColumn("TYPE_DAY", Translation.MIS.MISS02P001.TYPE_DAY, 20, render: "RENDER_TYPEDAY"),
            new GridColumn("REMARK", Translation.MIS.MISS02P001.REMARK, 20)
        )

    <script>
        var RENDER_TYPEDAY = function (data, type, full, meta) {
            var tag = '';

            if (!isNullOrEmpty(data)) {
                if (data == "H") {
                    tag = "Holiday";
                } else if (data == "W") {
                    tag = "Saturday Working";
                } else if (data == "S") {
                    tag = "Send Program Package";
                } else if (data == "D") {
                    tag = "Deployment on PROD/QA.";
                } else {
                    tag = "V-Smart infrom issue no deployment";
                }
            }

            return tag;
        };

        $(document).ready(function () {
            $("#Upload").click(function () {
                $("#mdUpload").modal();
            });

            $("#btnContinueValExcel").click(function () {
                var button = $(this);
                var modal = button.closest(".modal");
                modal.modal("hide");

                var formData = $("#form1").serializeFormData();
                $.ajax({
                    url: '@Url.Action("LoadExcel")',
                    type: 'post',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: OnAjaxSuccess,
                    error: OnAjaxError
                });
                bindGridSearch({ page: 1 });
            });
        });

    </script>
@Html.GetVSMFileUploadExcelScriptFor(m => m.EXCEL_UPLOAD)
