@using FluentBootstrap
@using WEBAPP.Helper
@using DataAccess.MIS
@using UtilityLib

@model MISS01P001Model

@{
    ViewBag.Title = "Assignment";
    Layout = "~/Views/Shared/_LayoutChildPage.cshtml";
}

@using (var form = Html.Bootstrap().Form().SetId("form1").SetHorizontal().Begin())
{
    @form.ValidationSummary(true).AddCss(Css.Hidden)
    @Html.AntiForgeryToken()
    using (var rowInfo = Html.Bootstrap().GridRow().Begin())
    {
        @Html.GetVSMWidgetsBegin(Translation.MIS.MISS01P001.ASSIGNMENT_CALCULATE)
        using (rowInfo.GridColumn(12).SetXs(12).Begin())
        {
            using (var row1 = Html.Bootstrap().GridRow().Begin())
            {
                using (row1.GridColumn(6).Begin())
                {
                    @form.InputNumberFor(a => a.NO).SetReadonly()
                }
                using (row1.GridColumn(6).Begin())
                {
                    @form.InputFor(a => a.RESPONSE_BY).SetControlLabel(Translation.MIS.MISS01P001.OWNER).SetReadonly()
                }
            }
            using (var row1 = Html.Bootstrap().GridRow().Begin())
            {
                using (row1.GridColumn(6).Begin())
                {
                    @form.InputJAutocompleteFor(t => t.ASSIGN_USER, isRequired: true, addValidateMessage: true).JAutoKeySource("AC_MISS01P001_004").JAutoBindField("USER_ID").JAutoSetExtraParamsByCtrl("COM_CODE").SetSelectOnly().SetControlLabel(Translation.MIS.MISS01P001.ASSIGN)
                    @form.HiddenFor(m => m.COM_CODE)
                }
            }
        }
        @Html.GetVSMWidgetsEnd()
    }
}

